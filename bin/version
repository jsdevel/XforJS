#!/bin/sh

if [ -z "$2" ] ; then
   currentVersion=$(cat VERSION);
   echo "Enter the new version to update to.  The current version is: $currentVersion";
   read version;
else
   version="$2";
fi

echo -n "$version" > VERSION;

cd $DIR_SRC/javascript;
node buildJavascriptResources.js
cd $DIR_BIN;

node build_framework.js